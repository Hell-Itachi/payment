{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Payment\Response list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Systemid</th>
                <th>Transactionid</th>
                <th>Amount</th>
                <th>Currency</th>
                <th>Sendid</th>
                <th>Date</th>
                <th>payAccountId</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('response_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.systemId }}</td>
                <td>{{ entity.transactionId }}</td>
                <td>{{ entity.amount }}</td>
                <td>{{ entity.currency }}</td>
                <td>{{ entity.sendId }}</td>
                <td>{{ entity.date}}</td>
                <td>{{ entity.payAccountId}}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('response_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('response_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('response_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
