{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Payment\Payment</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Paysystem</th>
                <td>{{ entity.paysystem }}</td>
            </tr>
            <tr>
                <th>Payaccid</th>
                <td>{{ entity.payAccId }}</td>
            </tr>
            <tr>
                <th>Payaccsecretkey</th>
                <td>{{ entity.payAccSecretKey }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ entity.owner }}</td>
            </tr>
            <tr>
                <th>Summa</th>
                <td>{{ entity.summa }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ entity.currency }}</td>
            </tr>
            <tr>
                <th>Sendid</th>
                <td>{{ entity.sendId }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ entity.token }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Pursecurrency</th>
                <td>{{ entity.purseCurrency }}</td>
            </tr>
            <tr>
                <th>Methodrequestdata</th>
                <td>{{ entity.methodRequestData }}</td>
            </tr>
            <tr>
                <th>Fieldorder</th>
                <td>{{ entity.fieldOrder }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('itc_payment') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('itc_payment_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('itc_payment_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
